<Page x:Class="pr4_test.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr4_test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Page2">
    <StackPanel Margin="20">


        <Label Content="Введите X:"/>

        <TextBox x:Name="txtX"/>


        <TextBlock Text="Выберите функцию f(x):"
                   Margin="10"/>


        <RadioButton x:Name="rbSh" Content="sh(x)"/>

        <RadioButton x:Name="rbX2" Content="x²"/>

        <RadioButton x:Name="rbExp" Content="eˣ"/>


        <Label Content="Результат:"/>

        <TextBox x:Name="txtResult"
                 IsReadOnly="True"
                 Background="LightGray"/>


        <StackPanel Orientation="Horizontal" Margin="10">

            <Button Content="Вычислить"
                    Width="120"
                    Margin="5"
                    Click="BtnCalc_Click"/>

            <Button Content="Очистить"
                    Width="120"
                    Margin="5"
                    Click="BtnClear_Click"/>

        </StackPanel>


    </StackPanel>
</Page>
