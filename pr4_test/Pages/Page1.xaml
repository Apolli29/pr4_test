<Page x:Class="pr4_test.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr4_test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Page1">

    <StackPanel Margin="20">


        <TextBlock Text="Вариант 7"
                   FontSize="18"
                   FontWeight="Bold"/>
        <Image Source="/Images/formula1.PNG" Height="73" Width="724"></Image>


        <Label Content="X:"/>

        <TextBox x:Name="txtX" ToolTip="Введите X"/>


        <Label Content="Y:"/>

        <TextBox x:Name="txtY" ToolTip="Введите Y"/>


        <Label Content="Z:"/>

        <TextBox x:Name="txtZ" ToolTip="Введите Z"/>


        <Label Content="Результат:"/>

        <TextBox x:Name="txtResult"
                 IsReadOnly="True"
                 Background="LightGray"/>


        <StackPanel Orientation="Horizontal" Margin="10">

            <Button Content="Вычислить"
                    Width="120"
                    Margin="5"
                    Click="BtnCalc_Click"/>

            <Button Content="Очистить"
                    Width="120"
                    Margin="5"
                    Click="BtnClear_Click"/>

        </StackPanel>


    </StackPanel>
</Page>
